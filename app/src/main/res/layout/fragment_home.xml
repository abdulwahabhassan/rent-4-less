<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.views.HomeFragment">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/home_header_text"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:textSize="15sp"
            android:lineHeight="27sp"
            android:text="@string/promotional_text_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_home" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/slider_image_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/shapeableImageView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/compose_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/promotionalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Be a part of our"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/communityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="community"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/promotionalTextView"
            app:layout_constraintStart_toStartOf="@+id/promotionalTextView"
            app:layout_constraintTop_toBottomOf="@+id/promotionalTextView" />

        <View
            android:id="@+id/orangeLinerView"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="@+id/communityTextView"
            app:layout_constraintStart_toStartOf="@+id/communityTextView"
            app:layout_constraintTop_toBottomOf="@+id/communityTextView" />

        <TextView
            android:id="@+id/promotionalTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:text="@string/promotional_text_three"
            app:layout_constraintEnd_toEndOf="@+id/orangeLinerView"
            app:layout_constraintStart_toStartOf="@+id/orangeLinerView"
            app:layout_constraintTop_toBottomOf="@+id/orangeLinerView" />

        <TextView
            android:id="@+id/promotionalTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:text="@string/promotional_text_four"
            app:layout_constraintEnd_toEndOf="@+id/promotionalTextView3"
            app:layout_constraintStart_toStartOf="@+id/promotionalTextView3"
            app:layout_constraintTop_toBottomOf="@+id/promotionalTextView3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/joinCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/promotionalTextView4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/green"
                    android:src="@drawable/ic_join"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/promotionalTextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/promotional_text_five"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageButton" />

                <TextView
                    android:id="@+id/promotionalTextView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:lineHeight="50dp"
                    android:text="@string/promotional_text_6"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/promotionalTextView5"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/promotionalTextView5"
                    app:layout_constraintTop_toBottomOf="@+id/promotionalTextView5" />

                <TextView
                    android:id="@+id/promotionalTextView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="42dp"
                    android:drawableStart="@drawable/ic_forward_arrow"
                    android:drawablePadding="8dp"
                    android:text="@string/promotional_text_7"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/promotionalTextView6"
                    app:layout_constraintTop_toBottomOf="@+id/promotionalTextView6" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/rentCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:elevation="0dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/joinCardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/orange">

                <ImageButton
                    android:id="@+id/rentImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@color/orange"
                    android:src="@drawable/ic_join"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/promotionalTextView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/promotional_text_eight"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rentImageButton" />

                <TextView
                    android:id="@+id/promotionalTextView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:lineHeight="50dp"
                    android:text="@string/promotional_text_9"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/promotionalTextView8"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/promotionalTextView8"
                    app:layout_constraintTop_toBottomOf="@+id/promotionalTextView8" />

                <TextView
                    android:id="@+id/promotionalTextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="42dp"
                    android:drawableStart="@drawable/ic_forward_arrow"
                    android:drawablePadding="8dp"
                    android:text="@string/promotional_text_7"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/promotionalTextView9"
                    app:layout_constraintTop_toBottomOf="@+id/promotionalTextView9" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/available_apartments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:text="Available Apartments"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rentCardView" />

        <ImageButton
            android:id="@+id/previousImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_background_grey"
            android:src="@drawable/arrow_previous_black"
            app:layout_constraintBottom_toBottomOf="@+id/nextImageButton"
            app:layout_constraintEnd_toStartOf="@+id/nextImageButton" />

        <ImageButton
            android:id="@+id/nextImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_background_green"
            android:src="@drawable/arrow_next_white"
            app:layout_constraintBottom_toBottomOf="@+id/available_apartments_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/available_apartments_text" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/availableApartmentsViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/available_apartments_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeAllButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/white"
            android:text="SEE ALL"
            android:textColor="@color/green"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="@id/availableApartmentsViewPager"
            app:layout_constraintStart_toStartOf="@id/availableApartmentsViewPager"
            app:layout_constraintTop_toBottomOf="@+id/availableApartmentsViewPager"
            app:strokeColor="@color/green"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/featured_properties_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="Featured Properties"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seeAllButton" />

        <ImageButton
            android:id="@+id/prevPropertyImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_background_grey"
            android:src="@drawable/arrow_previous_black"
            app:layout_constraintBottom_toBottomOf="@+id/nextPropertyImageButton"
            app:layout_constraintEnd_toStartOf="@+id/nextPropertyImageButton" />

        <ImageButton
            android:id="@+id/nextPropertyImageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_background_green"
            android:src="@drawable/arrow_next_white"
            app:layout_constraintBottom_toBottomOf="@+id/featured_properties_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/featured_properties_text" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/featuredPropertyViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/featured_properties_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeAllPropertyButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:text="@string/see_all_text"
            android:textColor="@color/green"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="@id/featuredPropertyViewPager"
            app:layout_constraintStart_toStartOf="@id/featuredPropertyViewPager"
            app:layout_constraintTop_toBottomOf="@+id/featuredPropertyViewPager"
            app:strokeColor="@color/green"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/whoWeAreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:text="@string/who_are_we_text"
            android:textColor="@color/green"
            app:flow_horizontalBias="0"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seeAllPropertyButton" />

        <TextView
            android:id="@+id/aboutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/about_rent4less_text"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:flow_horizontalBias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/whoWeAreTextView" />

        <TextView
            android:id="@+id/whoWeAreBodyTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:lineSpacingExtra="10dp"
            android:textSize="15sp"
            android:text="@string/promotional_text_who_we_are"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aboutTextView" />

        <TextView
            android:id="@+id/readMoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp"
            android:text="@string/read_more_text"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/ic_read_more"
            app:flow_horizontalBias="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/whoWeAreBodyTextView" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/promotionalImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            android:background="@drawable/ic_background_rounded_edges"
            android:src="@drawable/ic_person_image_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/readMoreTextView" />

        <ImageButton
            android:id="@+id/apartmentsCountImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@color/white"
            android:src="@drawable/ic_apartments"
            app:layout_constraintEnd_toStartOf="@+id/roomCountsImageButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/promotionalImageView" />

        <ImageButton
            android:id="@+id/roomCountsImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@color/white"
            android:src="@drawable/ic_room"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/apartmentsCountImageButton"
            app:layout_constraintTop_toBottomOf="@id/promotionalImageView" />

        <ImageButton
            android:id="@+id/happyCustomersCountImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:src="@drawable/ic_happy_customer"
            app:layout_constraintEnd_toStartOf="@+id/officeSquareMetersImageButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apartmentTextTextView" />

        <ImageButton
            android:id="@+id/officeSquareMetersImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_office"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/happyCustomersCountImageButton"
            app:layout_constraintTop_toBottomOf="@+id/roomTextTextView" />

        <TextView
            android:id="@+id/apartmentCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="50+"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/apartmentsCountImageButton"
            app:layout_constraintStart_toStartOf="@id/apartmentsCountImageButton"
            app:layout_constraintTop_toBottomOf="@id/apartmentsCountImageButton" />

        <TextView
            android:id="@+id/apartmentTextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Apartments"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/apartmentCountTextView"
            app:layout_constraintStart_toStartOf="@id/apartmentCountTextView"
            app:layout_constraintTop_toBottomOf="@id/apartmentCountTextView" />

        <TextView
            android:id="@+id/roomCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="300+"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/roomCountsImageButton"
            app:layout_constraintStart_toStartOf="@id/roomCountsImageButton"
            app:layout_constraintTop_toBottomOf="@id/roomCountsImageButton" />

        <TextView
            android:id="@+id/roomTextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rooms"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/roomCountTextView"
            app:layout_constraintStart_toStartOf="@id/roomCountTextView"
            app:layout_constraintTop_toBottomOf="@id/roomCountTextView" />

        <TextView
            android:id="@+id/happyCustomerCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="450+"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/happyCustomersCountImageButton"
            app:layout_constraintStart_toStartOf="@id/happyCustomersCountImageButton"
            app:layout_constraintTop_toBottomOf="@id/happyCustomersCountImageButton" />

        <TextView
            android:id="@+id/happyCustomerTextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Happy Customers"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/happyCustomerCountTextView"
            app:layout_constraintStart_toStartOf="@id/happyCustomerCountTextView"
            app:layout_constraintTop_toBottomOf="@id/happyCustomerCountTextView" />

        <TextView
            android:id="@+id/officeCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="1000+"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/officeSquareMetersImageButton"
            app:layout_constraintStart_toStartOf="@id/officeSquareMetersImageButton"
            app:layout_constraintTop_toBottomOf="@id/officeSquareMetersImageButton" />

        <TextView
            android:id="@+id/officeTextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Office Sqm"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/officeCountTextView"
            app:layout_constraintStart_toStartOf="@id/officeCountTextView"
            app:layout_constraintTop_toBottomOf="@id/officeCountTextView" />

        <ImageView
            android:id="@+id/phoneToolsImageView"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
